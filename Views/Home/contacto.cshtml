@{
    ViewData["Title"] = "Contacto";
}

<div class="text-center">
    <h1 class="display-4"> @ViewData["Title"]</h1>
</div>

<form asp-action="ContactoCreate">
    <div class="form-group">
        <label>Nombre</label>
        <input type="text" class="form-control" asp-for="nombre">
    </div>
    <div class="form-group">
        <label>Apellido</label>
        <input type="text" class="form-control" asp-for="apellido">
    </div>
    <div class="form-group">
        <label>Motivo</label>
        <input type="text" class="form-control" asp-for="motivo">
    </div>
    <div class="form-group">
        <label>Mensaje</label>
        <input type="textarea" class="form-control" asp-for="mensaje">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>